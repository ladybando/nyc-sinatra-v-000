<h2>Create New Landmark</h2>

<body>
    <form  action="/landmark"method="POST">
      <label> Figure Name </label>
      <input type="text" name="figure[name]" id="figure_name"> </br>
        <% Figure.all.each do |figure| %>
          <input id="<%= figure.name %>" type="checkbox" name="figures[]" value="<%= figure.id %>">
        <% end %>

    
      <label> Landmark Name </label>
        <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
          <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
          <% end %>
          
         <label>Name:</label>
          <input type="text" id="landmark_name" name="landmark[name]">
          <label>Year:</label>
          <input type="text" name="landmark[year_completed]">

      <input type="submit" value="Create New Figure">
      
      
    </form>
  </body>

<a class="button" href="/figures">Landmarks</a>
